<h1>Articles</h1>
<div class="well">
  <%= link_to "New Article", new_article_path, class: "btn btn-primary" %>
</div>

<% if flash[:notice] %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% if @articles.size == 0 %>
      <tr>
        <td colspan="6">No articles found.</td>
      </tr>
    <% else %>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.text %></td>
          <td>
            <%= link_to "Edit", edit_article_path(article), class: "btn btn-default" %>
          </td>
          <td>
            <%= button_to "Delete", article, method: :delete, data: { confirm: "Are you sure you wish to delete #{article.title}?" }, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
